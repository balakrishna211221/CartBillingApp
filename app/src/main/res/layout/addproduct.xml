<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="50dp"
        android:gravity="center"

        android:layout_height="wrap_content">


    <EditText
        android:id="@+id/et_item_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="name"
        android:ems="10"
        android:background="@drawable/shapebt"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:layout_marginVertical="2dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="price"
        android:ems="10"
        android:paddingHorizontal="10dp"

        android:background="@drawable/shapebt"
        android:layout_marginVertical="2dp"

        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/qty"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Qty"
        android:ems="10"
        android:background="@drawable/shapebt"        android:paddingHorizontal="10dp"


        android:layout_marginVertical="2dp"

        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/imagelink"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="image"        android:paddingHorizontal="10dp"

        android:ems="10"
        android:layout_marginVertical="2dp"
        android:inputType="textUri"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shapebt"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



          <Button
        android:id="@+id/btn_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Add Item"
              android:background="@drawable/shapebt2"
              android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_brand" />


    </LinearLayout>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/webview"
        ></WebView>
</LinearLayout>